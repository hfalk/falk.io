// # CV Header
// HeaderSize
headerSize = 600px
#cvHeader
  background linear-gradient(to bottom, rgba(255,255,255,0.2) 0%,rgba(255,255,255,0.2) 100%), url('../images/gloshaugen.jpg') repeat 0 0
  text-align center
  background-attachment relative
  background-position center center
  height headerSize
  width 100%

  -webkit-background-size cover
  -moz-background-size cover
  background-size cover

  #falkPic
    width headerSize * (2/3)
    margin-top headerSize * (1/6)

// Social icons
#socialLink
  display: inline-block
  margin-top headerSize * (1/24)

.google
  background: url('../images/google.png') no-repeat
  background-color: white
  background-size: cover

.google:hover
  background-color: #3F85F4

.github
  background: url('../images/github.png') no-repeat
  background-color: white
  background-size: cover

.github:hover
  background-color: #338ACC

.linkedin
  background: url('../images/linkedin.png') no-repeat
  background-color: white
  background-size: cover

.linkedin:hover
  background-color: #0077B5
  z-index: 1

.facebook
  background: url('../images/facebook.png') no-repeat
  background-color: white
  background-size: cover

.facebook:hover
  background-color: #3b5998

.contactIcon
  width: 50px
  height: headerSize * (1/12)
  border-radius: headerSize * (1/24)
  -webkit-border-radius: headerSize * (1/24)
  -moz-border-radius: headerSize * (1/24)
  margin-left 6px
  margin-right 6px

